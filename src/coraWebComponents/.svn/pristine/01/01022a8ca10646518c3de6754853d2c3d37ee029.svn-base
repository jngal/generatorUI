  vyfarbenie povinnÃ½ch prvkov
  div[class*="required"] {
    & > .input.k-textbox.k-state-invalid,
    & > div > .k-autocomplete,
    & > .k-numeric-wrap,
    & > .k-textbox,
    & > .k-dateinput-wrap,   
    & > .k-datepicker, 
    & > input, 
    & > .numerictextbox {
      font-weight: bold;
      .k-input {
        box-shadow: none;
        background-color: transparent !important;
      }
    }
    & > div > button > .k-icon.k-i-more-vertical {
      @include themed() {
        color: color($basicwhite);
        background-color: color($primarydark) !important;
      }
    }
  }

  .k-form-field.required {
    & > .input.k-textbox.k-state-invalid,
    & > div > .k-autocomplete,
    & > .k-numeric-wrap,
    & > .k-textbox,
    & > .k-dateinput-wrap,   
    & > .k-datepicker, 
    & > input, 
    & > .numerictextbox,
    & > .k-autocomplete,
    input {
      @include themed() {
        border-bottom: 1px solid color($primary);
      }
      &:hover, &:focus {
        @include themed() {
          border-bottom: 2px solid color($primary);
        }
        input {
          @include themed() {
            border-bottom: 2px solid color($primary);
          }
        }
      }
    }
  }
  
  .k-form-field:not(.disabled-field):not(.required) {
    & > .input.k-textbox.k-state-invalid,
    & > div > .k-autocomplete:not(.disabled-field),
    & > .k-numeric-wrap:not(.disabled-field),
    & > .k-textbox:not(.disabled-field),
    & > .k-dateinput-wrap:not(.k-state-disabled),   
    & > .k-datepicker:not(.disabled-field), 
    & > input:not(.disabled-field), 
    & > .k-autocomplete:not(.disabled-field),
    & > .numerictextbox:not(.disabled-field),
    input:not(.disabled-field) {
      @include themed() {
        border-bottom: 1px solid color($secondarydarker);
      }
      &:hover, &:focus {
        @include themed() {
          border-bottom: 2px solid color($secondarydarker);
        }
        input {
          @include themed() {
            border-bottom: 2px solid color($secondarydarker);
          }
        }
      }
    }
  }

  .k-form-field:not(.disabled-field):not(.required) {
    .k-state-disabled, .disabled-field {
      input {
        border-bottom: none !important;
      }
    }
  }


}

.k-form-field {
  .k-widget, .numerictextbox {
    padding: 0 !important;
    input {
      padding-left: 12px;
    }
  }
}


.validation-invalid {
  & + .validation {
    opacity: 1;
    display: inline-block;
  }
  & > .input.k-textbox.k-state-invalid,
  & > div > .k-autocomplete,
  & > .k-numeric-wrap,
  & > .k-textbox,
  & > .k-dateinput-wrap,   
  & > .k-datepicker, 
  & > input, 
  & > .numerictextbox, 
  & > .picker > span > span > input,
  input {
    @include themed() {
      border-bottom: 1px solid color($validation-error) !important;
    }
    &:hover, &:focus {
      @include themed() {
        border-bottom: 2px solid color($validation-error) !important;
      }
      input {
        @include themed() {
          border-bottom: 2px solid color($validation-error) !important;
        }
      }
    }
  }
}

.validation {
  position: relative;
  padding-left: 140px;
  width: auto;
  display: none;
  pointer-events: none;
  opacity: 0;
  top: -15px;
  -webkit-transition: opacity .15s ease-in-out;
  -moz-transition: opacity .15s ease-in-out;
  -ms-transition: opacity .15s ease-in-out;
  -o-transition: opacity .15s ease-in-out;
  transition: opacity .15s ease-in-out;
  font-size: 12px;
  line-height: 16px;
  @include themed (){
    color: color($validation-error);
  }
  border-radius: 3px;
}


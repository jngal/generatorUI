        }
      }
    } 
    .datepicker {
      .k-select {
        padding: 0;
        border-radius: 0;
        position: relative;
        width: 2em;
        height: 2em;
        overflow: hidden;
        span {
          height: 100%;
          line-height: 1.7em;
        }
        // position: absolute;
        // width: 2.5rem;
        // height: 2.5rem;
        // right: -0.4rem;
        // border-top-right-radius: 0.4rem;
        // overflow: hidden;

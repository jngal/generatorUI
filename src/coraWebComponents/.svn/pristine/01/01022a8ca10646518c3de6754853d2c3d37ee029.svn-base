      }
    }
  }

  .page {
    padding-right: 90px;
    .detail-title {
      margin: 15px;
      margin-right: 0px;
      padding-left: 40px;
      font-weight: bold;
      padding-bottom: 15px;
      font-size: 16px;
      @include themed() {

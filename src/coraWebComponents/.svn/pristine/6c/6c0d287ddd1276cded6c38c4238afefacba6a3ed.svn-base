@import "../variables";
@import "../themes";

.sidebar {
  @include themed() {
    background-color: color($menudark);
  }

  // ::-webkit-scrollbar {
  // }

  ::-webkit-scrollbar-track {
    @include themed() {
      background-color: color($menudark);
    }
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    @include themed() {
      background-color: color($secondary);
      border: 3px solid color($secondary);
    }
  }

  ::-webkit-scrollbar-thumb:hover {
    @include themed() {
      background-color: color($secondarylight);
    }
  }

  .k-link {
    &:hover,
    &.k-state-selected {
      @include themed() {
        background-color: color($primary) !important;
        color: color($secondarymedium) !important;
      }
    }
  }
}

.navbar .k-i-grid {
  width: 65px;
  height: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  font-size: 30px;
  font-family: "WebComponentsIcons";
  font-style: normal;
  -webkit-font-feature-settings: normal;
  font-feature-settings: normal;
  font-variant: normal;
  font-weight: normal;
  line-height: 1;
  //speak: none;
  text-transform: none;
  text-decoration: none;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  cursor: pointer;
  padding-top: 17.5px;
  @include themed() {
    background-color: color($menubasic);
  }
  //padding-left:17.5px;
  //margin: 0 auto;
}

// nastavenie tiena pre sidebar
div[class*="w-sidebar"].col-3,
div[class*="w-sidebar"].col-1 {
  display: none;
  position: relative;
  z-index: 1;
  @include themed() {
    box-shadow: 2px 0 8px 0 $secondary;
  }
}

div[class*="w-sidebar overBody"].col-3 {
  display: block;
  z-index: 2;
  box-shadow: 3px 0px 5px 1px grey;
}

.k-form-inline div[class*="sidebar-"] {
  padding-right: 15px;
  @include themed() {
    background-color: color($basicwhite);
    border: 1px solid rgba(color($secondarymedium), 0.4);
  }
  input {
    @include themed() {
      background-color: color($secondarymedium) !important;
    }
    &[value="de≈à. mesiac. rok"] {
      @include themed() {
        color: color($secondarymedium) !important;
      }
    }
  }
  .k-widget {
    padding: 0;
  }
  .k-datepicker {
    .k-select {
      right: -1px;
    }
  }
}

.k-form-inline {
  @media only screen and (max-width: 1200px) {
    div.sidebar-1 {
      right: 30px;

      &:not(.compact) {
        right: -1px;
        z-index: 1;

        & + div.sidebar-2 {
          right: 375px;
        }
      }
    }

    div.sidebar-2 {
      right: 80px;

      &:not(.compact) {
        right: 48px;
        z-index: 1;
      }
    }
  }

  .side-column {
    &.column-expanded {
      min-width: 500px !important;
    }
  }

  div[class*="sidebar-"] {
    max-height: 100%;
    @media only screen and (max-width: 1200px) {
      position: absolute;
      min-height: 105%;
    }

    &:not(.compact) {
      min-width: 344px;
    }

    &.compact {
      margin-right: -1px;
      h2 {
        text-align: left;
        font-size: 1rem;
        text-transform: none;
        font-weight: normal;
        @include themed() {
          color: color($secondarydarker);
        }
      }
    }

    .datepicker-reset {
      right: 54px !important;
    }

    h2 {
      font-weight: normal;
      text-transform: none;
      font-size: 1rem;
      text-align: left;
      margin-left: 15px;
      margin-top: 17px;
      padding-bottom: 10px;
      @include themed() {
        color: rgba(color($secondarydark), 0.25);
      }
    }

    &.sidebar-horizontal:not(.compact) {
      width: 100%;
      max-width: 100%;
      padding: 0 30px 20px 30px;
    }

    &.compact {
      &:not(.sidebar-horizontal) {
        max-width: 49px !important;
        writing-mode: vertical-rl;
      }
      &.sidebar-horizontal {
        height: 50px;
        max-width: 100%;
        flex: 100%;
        span {
          &::before {
            display: block;
            position: absolute;
            left: -10px;
            top: -7px;
          }
        }
        h2 {
          text-indent: 30px;
          line-height: 50px;
          padding: 0;
          margin: 0;
        }
      }

      .row {
        display: none;
      }

      h2 {
        margin-top: 45px;
        margin-right: 0px;

        &:hover {
          opacity: 1;
        }
      }
    }

    .row {
      padding: 0;
    }

    .k-autocomplete,
    .k-flatcolorpicker .k-color-value,
    .k-combobox .k-dropdown-wrap,
    .k-datepicker .k-picker-wrap,
    .k-timepicker .k-picker-wrap,
    .k-datetimepicker .k-picker-wrap,
    .k-dateinput .k-dateinput-wrap,
    .k-textbox,
    .k-textarea,
    .k-input.k-textbox,
    .k-multiselect-wrap,
    .k-numerictextbox .k-numeric-wrap,
    .k-searchbar {
      background-image: none;
      @include themed() {
        background-color: color($basicwhite);
      }
    }

    .k-autocomplete,
    .k-flatcolorpicker .k-color-value,
    .k-combobox .k-dropdown-wrap,
    .k-datepicker .k-picker-wrap,
    .k-timepicker .k-picker-wrap,
    .k-datetimepicker .k-picker-wrap,
    .k-dateinput .k-dateinput-wrap,
    .k-textbox,
    .k-textarea,
    .k-input.k-textbox,
    .k-multiselect-wrap,
    .k-numerictextbox .k-numeric-wrap {
      background-image: none;
      @include themed() {
        background-color: color($basicwhite);
      }
    }

    .k-colorpicker,
    .k-combobox,
    .k-dateinput,
    .k-datepicker,
    .k-datetimepicker,
    .k-dropdown,
    .k-multiselect,
    .k-numerictextbox,
    .k-maskedtextbox,
    .k-timepicker,
    .k-dropdowntree {
      background-color: inherit;
    }

    .k-form-field input {
      margin: auto 0;
    }

    .sidebar-toggle {
      position: absolute;
      top: 18px;
      left: 10px;
      @include themed() {
        color: color($secondarymedium);
      }

      &:hover {
        cursor: pointer;
      }

      &.compact {
        display: block;
        width: 100%;
        height: 100%;
        top: 0;
        right: 0;
        line-height: 65px;
        text-indent: 16px;
        @include themed() {
          background-color: transparent;
        }

        &::before {
          font-size: 18px;
          position: absolute;
          top: 2px;
          right: -8px;
          @include themed() {
            color: color($secondarydarker);
          }
        }

        &:hover {
          background-color: transparent;
        }
      }
    }
  }
}

@media only screen and (min-width: $breakpoint-md) {
  div[class*="w-sidebar"].col-3,
  div[class*="w-sidebar"].col-1 {
    display: block;
  }
}

@media only screen and (max-width: $breakpoint-md) {
  .k-form-inline {
    div[class*="sidebar-"] {
      &.compact {
        max-width: 20px !important;

        h2 {
          font-size: 14px;
          line-height: 0.1;
          margin-top: 40px;
        }

        .sidebar-toggle::before {
          font-size: 20px;
          right: -16px;
        }
      }
    }

    div.sidebar-2 {
      right: 63px;

      &:not(.compact) {
        right: 31px;
      }
    }
  }
}
